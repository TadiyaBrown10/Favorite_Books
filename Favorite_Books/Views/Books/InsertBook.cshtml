@model Books

<h2>Create a New Book</h2>

@using (Html.BeginForm("InsertBookToDatabase", "Books", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="" />

    <label asp-for="Author" class="control-label">Author</label>
    <input type="text" name="Author" class="form-control" value="" />

    <label asp-for="Pages" class="control-label">Pages</label>
    <input type="number" step="0.01" name="Pages" class="form-control" />

    <div class="form-group">
        <label for="">Select a Genre</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var genre in Model.GenreType)
            {
                <option value="@genre.GenresID"> @genre.GenreType</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Book" class="btn btn-primary" />
}
